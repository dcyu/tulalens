= form_for @response do |f|
  - if @response.errors.any?
    #error_explanation
      %h2= "#{pluralize(@response.errors.count, "error")} prohibited this response from being saved:"
      %ul
        - @response.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :question_id
    = f.collection_select :question_id, Question.all, :id, :text
  .field
    = f.label "Survey #"
    = f.collection_select :survey_id, Question.all, :id, :id
  .actions
    = f.submit 'Save'
