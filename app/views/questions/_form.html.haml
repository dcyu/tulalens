= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    %p Is the question response a number?
    = f.label :number, "True"
    = f.radio_button :number, "true", checked: true

    = f.label :number, "False"
    = f.radio_button :number, "false"
  .actions
    = f.submit 'Save'
